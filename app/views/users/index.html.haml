.header
  .header__container
    .header__top
      %h1.header__top--img
        = link_to root_path do
          = image_tag "/logo.png"
      .header__top__search
        = form_for :product do |f|
          = f.text_field :search, class: "search__input", placeholder: "キーワードから探す"
          %button{type: "submit", class: "search__btn"}
            .searchBox__icon
              = image_tag "/icon-search 1.png", class: "searchBox__icon__image"
    .nav
      %ul.listsleft
        %li.listsleft__item
          カテゴリー
          .category-box
            .parent
              - @parents.each do |parent|
                .parent-content
                  = parent.name
                  .child
                    - parent.children.each do |child|
                      .child-content
                        = child.name
                        .grandchild
                          - child.children.each do |grandchild|
                            .grandchild-content
                              = grandchild.name

        %li.listsleft__item
          ブランド
      %ul.listsright
        %li.listsright__item
          = link_to "" do
            いいね一覧
        %li.listsright__item
          = link_to "" do
            マイページ    
          
.mypage
  .mypage__user
    .mypage__user__front
      = image_tag '/member_photo_noimage_thumb.png', alt: '', height: '60px', width: '60px', class: 'user-icon'
      %p nickname
      %p 出品数 0
    .mypage__user__list
      - @contents.each do|c|
        .mypage__user__list__content-title
          = c
    %h.setting 設定
    .mypage__user__setting
      - @settings.each do|c|
        .mypage__user__list__content-title
          = c
  .mypage__inner
    .inner__container
      %h2.inner__title
        だれでもかんたん、人生を変えるフリマアプリ
      %p.inner__text
        今すぐ無料ダウンロード
      .inner__btn
        = link_to "" ,class: "abtn" do
          = image_tag "/card_button-ios.png"
        = link_to "" ,class: "gbtn" do
          = image_tag "/unnamed.png"
.footer
  %ul.footer__contents
    %li.content
      %h2.content__head
        FURIMAについて
      %ul
        %li
          = link_to "" do
            会社概要（運営会社）
        %li
          = link_to "" do
            プライバシーポリシー
        %li
          = link_to "" do
            FURIMA利用規約
        %li
          = link_to "" do
            ポイントに関する特約
    %li.content
      %h2.content__head
        FURIMAを見る
      %ul
        %li
          = link_to "" do
            カテゴリー一覧
        %li
          = link_to "" do
            ブランド一覧
    %li.content
      %h2.content__head
        ヘルプ&ガイド
      %ul
        %li
          = link_to "" do
            FURIMAガイド
        %li
          = link_to "" do
            FURIMAロゴ利用ガイドライン
        %li
          = link_to "" do
            お知らせ
  .footer__logo
    = link_to "" do
      = image_tag "/logo-white.png"
